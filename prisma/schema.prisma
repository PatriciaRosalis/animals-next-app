// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  post      Post[]
}

model Post {
  id                      Int         @id @default(autoincrement())
  foundOrLost             FoundOrLost @default(PERDIDO)
  name                    String
  location                String
  missingPlace            String?
  time                    String
  date                    DateTime    @default(now())
  sex                     Sex         @default(DONT)
  sterilized              Options?    @default(DONT)
  chip                    Options     @default(DONT)
  eyeColor                String?
  breed                   String?
  importantInformation    String?
  importantCharacteristic String?
  usernameFacebook        String?
  email                   String
  phoneNumber             Int?
  User                    User?       @relation(fields: [userId], references: [id])
  userId                  Int?
}

enum Sex {
  FEMALE
  MALE
  DONT
}

enum FoundOrLost {
  PERDIDO
  ENCONTRADO
}

enum Options {
  YES
  NO
  DONT
}
