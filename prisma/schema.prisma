// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int     @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String  @unique
  phoneNumber      Int?
  post             Post[]
  usernameFacebook String?
}

model Post {
  id                      Int      @id @default(autoincrement())
  name                    String
  location                String
  missingPlace            String
  time                    DateTime
  sex                     Sex      @default(DONT)
  sterilized              Boolean?
  chip                    Boolean?
  eyeColor                String?
  breed                   String?
  importantInformation    String?
  importantCharacteristic String?
  User                    User?    @relation(fields: [userId], references: [id])
  userId                  Int?
}

enum Sex {
  FEMALE
  MALE
  DONT
}
